<p id="notice"><%= notice %></p>

<h1>Listing Provider Infos</h1>

<table>
  <thead>
    <tr>
      <th>Pname</th>
      <th>Conperson</th>
      <th>Conpost</th>
      <th>Conphonenum</th>
      <th>Address</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provider_infos.each do |provider_info| %>
      <tr>
        <td><%= provider_info.pname %></td>
        <td><%= provider_info.conPerson %></td>
        <td><%= provider_info.conPost %></td>
        <td><%= provider_info.conPhoneNum %></td>
        <td><%= provider_info.Address %></td>
        <td><%= provider_info.Email %></td>
        <td><%= link_to 'Show', provider_info %></td>
        <td><%= link_to 'Edit', edit_provider_info_path(provider_info) %></td>
        <td><%= link_to 'Destroy', provider_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

